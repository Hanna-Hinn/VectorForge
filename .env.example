# =============================================================================
# VectorForge Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# --- Database ---
VECTORFORGE_DB_HOST=localhost
VECTORFORGE_DB_PORT=5432
VECTORFORGE_DB_DATABASE=vectorforge
VECTORFORGE_DB_USER=vectorforge
VECTORFORGE_DB_PASSWORD=
VECTORFORGE_DB_POOL_SIZE=10
VECTORFORGE_DB_MAX_OVERFLOW=5
VECTORFORGE_DB_ECHO_SQL=false

# --- Storage ---
VECTORFORGE_STORAGE_DEFAULT_BACKEND=pg
VECTORFORGE_STORAGE_THRESHOLD_MB=10
# VECTORFORGE_STORAGE_S3_BUCKET=
# VECTORFORGE_STORAGE_S3_REGION=us-east-1
# VECTORFORGE_STORAGE_S3_ACCESS_KEY=
# VECTORFORGE_STORAGE_S3_SECRET_KEY=
# VECTORFORGE_STORAGE_S3_ENDPOINT_URL=

# --- Embedding ---
VECTORFORGE_EMBEDDING_DEFAULT_PROVIDER=voyage
VECTORFORGE_EMBEDDING_DEFAULT_MODEL=voyage-3
VECTORFORGE_EMBEDDING_DIMENSIONS=1024
VECTORFORGE_EMBEDDING_BATCH_SIZE=100

# --- Chunking ---
VECTORFORGE_CHUNKING_STRATEGY=recursive
VECTORFORGE_CHUNKING_CHUNK_SIZE=1000
VECTORFORGE_CHUNKING_CHUNK_OVERLAP=200
VECTORFORGE_CHUNKING_BREAKPOINT_THRESHOLD=0.5

# --- LLM ---
VECTORFORGE_LLM_DEFAULT_PROVIDER=openai
VECTORFORGE_LLM_DEFAULT_MODEL=gpt-4o
VECTORFORGE_LLM_TEMPERATURE=0.7
VECTORFORGE_LLM_MAX_TOKENS=2048
# VECTORFORGE_LLM_SYSTEM_PROMPT=

# --- Monitoring ---
VECTORFORGE_MONITORING_LOG_LEVEL=INFO
VECTORFORGE_MONITORING_LOG_FORMAT=json
# VECTORFORGE_MONITORING_LOG_FILE=
VECTORFORGE_MONITORING_METRICS_ENABLED=true
VECTORFORGE_MONITORING_METRICS_FLUSH_INTERVAL_SECONDS=60
VECTORFORGE_MONITORING_HEALTH_CHECK_TIMEOUT_SECONDS=5
